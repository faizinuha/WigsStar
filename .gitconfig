    # ðŸ§  Function & Logic backup
  db-func = "!supabase db dump --linked --include-functions --include-policies --include-triggers -f supabase-functions.sql"

  # âš¡ Edge Function backup
  edge-pull = "!supabase functions download --project-ref $(supabase link status --json | jq -r .project_ref) --dir ./supabase/functions"
  edge-push = "!supabase functions deploy --project-ref $(supabase link status --json | jq -r .project_ref) --all"